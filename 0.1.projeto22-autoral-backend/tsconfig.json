{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDirs": ["src", "tests"],
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
    ]
  },
  "ts-node": {
    "esm": true
  }
}